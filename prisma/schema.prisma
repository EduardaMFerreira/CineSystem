generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filme {
  id       Int      @id @default(autoincrement())
  titulo   String
  genero   String
  duracao  Int
  sessoes  Sessao[]
}

model Sala {
  id        Int      @id @default(autoincrement())
  nome      String
  capacidade Int
  sessoes   Sessao[]
}

model Sessao {
  id      Int      @id @default(autoincrement())
  horario DateTime
  filmeId Int
  salaId  Int

  filme   Filme @relation(fields: [filmeId], references: [id])
  sala    Sala  @relation(fields: [salaId], references: [id])
}
