// Arquivo de definição do banco com Prisma ORM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Filme
model Filme {
  id       Int      @id @default(autoincrement())
  titulo   String
  genero   String
  duracao  Int
  sessoes  Sessao[]
}

// Modelo de Sala
model Sala {
  id        Int      @id @default(autoincrement())
  nome      String
  capacidade Int
  sessoes   Sessao[]
}

// Modelo de Sessão
model Sessao {
  id      Int      @id @default(autoincrement())
  horario DateTime
  filmeId Int
  salaId  Int 

// Relações chaves estrangeiras
  filme   Filme @relation(fields: [filmeId], references: [id])
  sala    Sala  @relation(fields: [salaId], references: [id])
}
